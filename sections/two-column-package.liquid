{% schema %}
{
  "name": "Two Column Package",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color"
    },
    { 
      "type": "text", 
      "id": "title", 
      "label": "Title", 
      "default": "Choose your Package" 
    },
    { "type": "textarea", 
      "id": "description", 
      "label": "Paragraph" , 
      "default": "Backed by expertise from top color analysis studios and the minds behind."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label 1"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "row1_col1",
      "name": "Row 1 Col 1: Image",
      "settings": [
        { 
          "type": "image_picker", 
          "id": "promote_image", 
          "label": "Promote Image" 
        }
      ]
    },
    {
      "type": "row1_col3",
      "name": "Row 1 Col 2: Best Deals",
      "settings": [
        {
          "type": "product",
          "id": "product1",
          "label": "Select Product 1"
        },
        {
          "type": "text",
          "id": "caption1",
          "label": "Product Caption",
          "default": "Best Deal"
        },
        {
          "type": "text",
          "id": "subheading1",
          "label": "Product Subheading",
          "default": "Limited time only!"
        },
        {
          "type": "text",
          "id": "button_label1",
          "label": "Button Label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link1",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "modal_label1",
          "label": "Modal 1 Label",
          "default": "Details"
        },
        {
          "type": "product",
          "id": "product2",
          "label": "Select Product 2"
        },
        {
          "type": "text",
          "id": "caption2",
          "label": "Product Caption2",
          "default": "Best Deal"
        },
        {
          "type": "text",
          "id": "subheading2",
          "label": "Product Subheading",
          "default": "Limited time only!"
        },
        {
          "type": "text",
          "id": "button_label2",
          "label": "Button Label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link2",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "modal_label2",
          "label": "Modal 2 Label",
          "default": "Details"
        }
      ]
    }
  ],
  "presets": [
    { "name": "Two Column Package"}
  ]
}
{% endschema %}

