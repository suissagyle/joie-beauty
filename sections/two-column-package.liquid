<section class="two-row-section image package center" style="background-color: {{ section.settings.background_color }};">
    <h2 class="m-0">{{ section.settings.title }}</h2>
    <p class="m-0 mb-6 mobile-hide">{{ section.settings.description }}</p>
  <div class="main-container center mt-6">
    <div class="d-flex w-100 m-auto">
      <div class="column w-40 d-flex flex-wrap align-items-center align-content-center">
        <img src="{{ section.blocks[0].settings.promote_image | img_url: '750x' }}" />
      </div>
      <div class="column w-60 p-0-mobile product-promo d-flex text-center">
        <div class="best-deal-wrapper">
          <div class="d-flex align-items-end">
            <div class="w-60">
              <ul class="w-100 m-0 mb-2 d-flex align-items-center">
                <li>&nbsp;</li><span class="caption">{{ section.blocks[1].settings.caption1 }}</span></li>
              </ul>
              {% assign product = all_products[section.blocks[1].settings.product1] %}
              {% if product %}
                <h3 class="w-100 product-title m-0 mb-2">{{ product.title }}</h3>
                <p class="w-100 product-price m-0 mb-2">
                  {{ product.price | money }} 
                  {% if product.compare_at_price > product.price %}
                    <span class="ms-10 slash">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                </p>
                <p class="w-100 product-subheading m-0 mb-4">{{ product.metafields.custom.subheading }}</p>
              </div> 
              <div class="w-40 d-flex justify-center">
                <a href="{{ section.blocks[1].settings.button_link1 }}" class="buy-button-plain">
                  {{ section.blocks[1].settings.button_label1 }}
                </a>
                <button class="modal-button buy-button-deal" data-modal-id="modal-{{ product.id }}">
                  {{ section.blocks[1].settings.modal_label1 }}
                </button>
                <!-- Modal 2 -->
                <div id="modal-{{ product.id }}" class="product-modal" style="display:none;">
                  <div class="modal-content">
                    <span class="close-modal">&times;</span>
                    <h2 class="m-0">{{ product.metafields.custom.details }}</h2>
                     {% if product.metafields.custom.details_list != blank %}
                        <ul>
                          {% for item in product.metafields.custom.details_list.value %}
                            <li>{{ item }}</li>
                          {% endfor %}
                        </ul>
                      {% endif %}
                  </div>
                </div>
                <!-- Modal 2 -->
              </div>
              
              {% else %}
                <p>Please select a product</p>
              {% endif %}
            </div>
          </div>
          <div class="best-deal-wrapper">
          <div class="d-flex align-items-end">
            <div class="w-60">
              {% assign product = all_products[section.blocks[1].settings.product2] %}
              {% if product %}
                <h3 class="w-100 product-title black m-0 mb-2">{{ product.title }}</h3>
                <p class="w-100 product-price m-0 mb-2">
                  {{ product.price | money }} 
                  {% if product.compare_at_price > product.price %}
                    <span class="ms-10 slash">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                </p>
                <p class="w-100 product-subheading m-0 mb-4">{{ product.metafields.custom.subheading }}</p>
              </div> 
              <div class="w-40 d-flex justify-center">
                <a href="{{ section.blocks[1].settings.button_link2 }}" class="buy-button-plain">
