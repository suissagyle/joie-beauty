<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Find the list item that contains the Cart link
    const cartListItem = Array.from(document.querySelectorAll('ul.menu-drawer__menu li')).find(li =>
      li.textContent.trim().includes('Cart')
    );

    if (cartListItem) {
      cartListItem.style.cursor = 'pointer';

      cartListItem.addEventListener('click', function (event) {
        // Prevent triggering when clicking inner links (like bubble etc.)
        const clickedElement = event.target;
        const isLink = clickedElement.closest('a');

        if (!isLink) {
          window.location.href = '/cart';
        }
      });
    }
  });
</script>


